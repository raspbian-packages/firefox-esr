         fontconfig,
         procps,
         debianutils (>= 1.16),
%if USE_SYSTEM_NSPR
         libnspr4 (>= 2:@NSPR_VERSION@~),
%endif
%if USE_SYSTEM_NSS
         libnss3 (>= 2:@NSS_VERSION@~)
%endif
